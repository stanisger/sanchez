.header
	background $cm-primary-color
	height 3.7rem
	width 100%
	position fixed
	padding 1.3rem 0 
	z-index 1
    
	@media(min-width 1024px)
		height 5rem
	
   .data-toggle-menu 
		transition( color $cm-transition-middle ease)
		color $cm-white-color
		cursor pointer
		margin .5
		position absolute
		left 1rem
		top -.5rem
		font-size 2rem !important
		
		&:hover 
			color $cm-hover-color
	
	.link-logotipo

		.item-logotipo 
			display block
			margin 0
			margin-top .3rem
			width 13rem
			
			@media(max-width 1024px) 
				margin auto
				width 9rem
	nav
		margin-top -.2rem
		background $cm-grayMedium-color 
	    
		@media(min-width 992px)
			background $cm-primary-color
			position absolute
			right 1rem
			top -.9rem

		.menu 
			
			&.-secondary
				color $cm-primary-color
				margin auto
				padding .1rem 0
				width 15.5rem 

				@media(min-width 992px)
					color $cm-white-color

				li:nth-child(3) 
					margin-left 1rem
				
				li:nth-child(2) 
					position relative 
		
					&:after
						content '\f10f'
						color $cm-primary-color
						font-family Flaticon
						font-size .5rem
						position absolute
						right 1.3rem
						transform rotate(-90deg)
						top .45rem

				select 
					background transparent
					border 0
					border-radius 0
					border-right 1px solid $cm-primary-color 
					color $cm-primary-color
					font-size .7rem
					height auto
					padding 0 2rem 0 1rem
					position relative 

					@media(min-width 992px)
						color $cm-white-color

				a 
					padding 0
					margin .25rem .6rem 0
				


.menu-primary 
	margin-top .3rem
	float right
    
	.menu-item:last-child
		display: flex

		.material-icons
			color $cm-secondary-color
			font-size 1.2rem
			margin-top .4rem

		.language-select-desktop
			background transparent
			border 0
			border-radius 0
			border-right 1px solid $cm-primary-color 
			color $cm-primary-color
			font-size .7rem
			height auto
			position relative 
			padding 0 .2rem

			@media(min-width 992px)
				color $cm-white-color
	 
	.menu-item
		a 
			color $cm-white-color
			font-size .8rem
			font-weight bold
			padding .7rem 1.4rem !important
			text-transform uppercase 
		    &:after
				color $secondary-color	
			
			&:hover 
			&:focus
			&:active		
				color $cm-white-color 
	
	@media(max-width 1024px) 
		display none

.is-dropdown-submenu
	border 0
	padding 1rem 0
	background $cm-primary-colorLight
	li 
		&:hover
		a 
			color $cm-primary-color
			&:hover 
			&:focus
			&:active		
				color $cm-primary-color

.dropdown.menu>li.is-dropdown-submenu-parent>a::after
	transition: all 0.5s ease-out;
	border-color: $cm-secondary-color transparent transparent;

.dropdown.menu>li.is-active > a {
	color $cm-white-color
	&:after {
		transform: rotate(180deg);
		}
}

.language-select
	display flex
	position absolute
	right 1rem
	top 2px
	width 3rem

	@media(min-width 1024px)
		display none

	.material-icons
		color $cm-secondary-color
		font-size 1rem !important
		margin-right .5rem

	.language-select-mobile
		background transparent
		border 0
		border-radius 0
		color $cm-white-color
		font-size .7rem
		height auto
		padding 0