.container-text 
    padding 0 1rem
    position relative

    &.-container-text-product
        padding 4rem 4rem 1rem


    &.-container-text-product-color
        height 100%
        padding 3rem
        -webkit-border-bottom-right-radius 6rem
        -moz-border-radius-bottomright 6rem
        border-bottom-right-radius 6rem
        
        @media (max-width 640px) 
            padding 1.5rem 1.5rem 3.5rem

    &.-color-white 
        color $cm-white-color
   
    >.list-descript
        list-style none
        li
            padding .4rem 0 

    >.title
        font-size 1.3rem
        margin 0 0 .5rem
        position relative
        &:before
            content ''
            position absolute
            height .2rem
            width 4rem
            background $cm-secondary-color
            bottom 0
            left 0

        &.-coldset   
            &:before 
                background $cm-primary-color

        &.-rotograbado   
            &:before 
                background $rotograbado

        &.-center
            text-align center
            &:before
                left 0
                right 0
                margin auto
    
        &.-eyecatcher
            font-size 2.2rem
        
        &.-card-expand
            font-size 1.1rem
            line-height 1rem
            &:before
               display none
    
    >.subtitle 
        font-family $cm-font-body 
        font-size 1rem
        font-weight lighter 

        &.-eyecatcher
            font-size .9rem

        &.-center
            text-align center

    >.text-body 
        font-size .8rem
        line-height 1.1rem 
 
        
        &.-card-expand
            display inherit

    >.subtitle-strong
        font-size .8rem
        font-weight bold
        margin-bottom .5rem
        display block
         
        &.-white 
            color $cm-white-color
       
        @media (min-width 1024px) 
            font-size 1rem
   
    
    @media (min-width 640px) 
        padding 3rem 1rem 

        >.title
            font-size 3rem
            position relative
            margin-bottom 1rem 

            &.-eyecatcher
                font-size 3rem

            &.-card-expand
                font-size 2rem
                line-height 1.8rem

        >.subtitle 
            font-size 1.7rem
            margin 0

            &.-eyecatcher
                font-size 1.2rem

        >.text-body 
            margin-bottom 2rem
            font-size .9rem 
            
            &.-card-expand
                line-height 1.1rem
                margin-bottom 0
                margin-top 1rem

.container-detail-product
    padding 3rem 4rem 1rem

    >.title 
        font-size 1rem

        @media (max-width 640px)
            margin-top 1rem
    
    >.list-detail 
        margin 0
        padding 0

        .list-detail-item
            padding .15rem 0
            list-style none
            display flex
            >p
                font-size .9rem 
                line-height 1.1rem 

                @media (max-width 640px)
                    font-size .8rem 

            >img 
                width 1.7rem 
                height 1.7rem
                @media (max-width 640px)
                    height 1.4rem


    @media (max-width 1024px)
        padding: 2rem

    @media (max-width 640px)
        padding 0 1rem 


