.card-lg
    background $cm-white-color
    min-height 21rem
    padding 4rem 1rem 0
    position relative

    &.-slide
        min-height 30rem
.card-sm 
    background $cm-white-color
    min-height auto
    padding: 1.5rem 0 3rem;
    position relative 
    
    @media (min-width:640px) 
        padding 3rem 0
        min-height 16rem
        
        @media (min-width:992px) 
            padding 3rem 2rem
            min-height 21rem
            
            @media (min-width:1024px) 
                padding 2rem 1rem 
                min-height 23rem
.card-sm-eye
    min-height auto
    padding: 1.5rem 0 3rem;
    position relative
    margin-bottom 2rem
    
    &:before 
        content ''
        width 100%
        height .5rem
        background red
        position absolute
        bottom 0
        z-index 9
        background rgba(201,19,140,1)
        background -moz-linear-gradient(left, rgba(201,19,140,1) 0%, rgba(103,51,148,1) 22%, rgba(0,143,209,1) 48%, rgba(0,166,83,1) 73%, rgba(247,239,4,1) 100%)
        background -webkit-gradient(left top, right top, color-stop(0%, rgba(201,19,140,1)), color-stop(22%, rgba(103,51,148,1)), color-stop(48%, rgba(0,143,209,1)), color-stop(73%, rgba(0,166,83,1)), color-stop(100%, rgba(247,239,4,1)))
        background -webkit-linear-gradient(left, rgba(201,19,140,1) 0%, rgba(103,51,148,1) 22%, rgba(0,143,209,1) 48%, rgba(0,166,83,1) 73%, rgba(247,239,4,1) 100%)
        background -o-linear-gradient(left, rgba(201,19,140,1) 0%, rgba(103,51,148,1) 22%, rgba(0,143,209,1) 48%, rgba(0,166,83,1) 73%, rgba(247,239,4,1) 100%)
        background -ms-linear-gradient(left, rgba(201,19,140,1) 0%, rgba(103,51,148,1) 22%, rgba(0,143,209,1) 48%, rgba(0,166,83,1) 73%, rgba(247,239,4,1) 100%)
        background linear-gradient(to right, rgba(201,19,140,1) 0%, rgba(103,51,148,1) 22%, rgba(0,143,209,1) 48%, rgba(0,166,83,1) 73%, rgba(247,239,4,1) 100%)
    
    @media (min-width:640px) 
        min-height 16rem
        
            
    @media (min-width:1024px) 
        padding 0
        min-height 18rem

.-bg-img
	background-size cover
	background-position center