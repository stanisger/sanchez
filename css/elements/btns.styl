.button 
	font-family $cm-font-title 
	font-weight bold
	opacity 1
	
	&.-btn-download
		background transparent
		border-radius 5rem
		display block
		margin auto
		max-width 14rem
		padding .6rem 2rem

		.fas
			font-size 1rem
			
		@media(max-width: 640px) 
			font-size .8rem
			padding .4rem 1rem 

	&.-in-card 
		bottom 1.8rem
		position absolute
		right 8.5rem

		@media (max-width 640px) 
			left 1.5rem
			right initial 

	&.-primary-color-outline 
		background transparent
		border .05rem solid $cm-secondary-color
		border-radius 5rem
		color $cm-secondary-color 

	&.-primary-color
		background-color $cm-secondary-color
		color $cm-white-color 
		transition all .4s ease 

		&:hover 
			background-color $cm-tertiary-color
			
	&.-absolute
		background-color rgba( 0, 0, 0, .3)
		border 0
		border-radius 0
		bottom 0
		color $cm-white-color 
		margin 0
		padding .9rem 4rem .9rem 0
		position absolute
		right -1px
		text-align right 
		transition all .4s ease	
		width 100%
	
		.material-icons
			color $cm-secondary-color
			font-size 1rem !important
			margin-left 1rem
			position absolute
			top .77rem
			transition all .4s ease 
		
		&:hover 
			.material-icons
				margin-left 1.5rem

