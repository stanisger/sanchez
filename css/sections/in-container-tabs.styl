
.tabbed-search {
  background: none;
  border: none;
  position: relative;
  padding-top: 3rem;  
}

.tabbed-search-content {
  position: relative;
  border: none;
}

@media screen and (max-width: 39.9375em) {
  .tabbed-search-content {
    padding-top: 20px;
    padding-bottom: 30px;
  }
}

.tabbed-search-content label {
  font-weight: 700;
  font-size: 0.8em;
  text-transform: uppercase;
  color: #efefef;
  letter-spacing: 0.5px;
  color: #9f9a90;
  background: $rotograbadoLight; 
}

.tabbed-search-content input[type=text] {
  margin-top: 15px;
  background: $rotograbadoLight; 
  color: white;
  border: 1px solid $rotograbadoLight; 
  border-radius: 3px;
  font-weight: 400;
  padding-left: 15px;
}

@media screen and (max-width: 39.9375em) {
  .tabbed-search-content input[type=text] {
    margin-top: 0px;
  }
}

.tabbed-search-content select {
  margin-top: 15px;
  color: white;
  border: 1px solid #7a7469;
  border-radius: 3px;
  font-weight: 400;
  padding-left: 15px;
}

@media screen and (max-width: 39.9375em) {
  .tabbed-search-content select {
    margin-top: 0px;
  }
}

.tabbed-search-content .button.search-button {
  padding-left: 0;
  padding-right: 0;
  border-radius: 3px;
  margin-top: 15px;
}

@media screen and (max-width: 39.9375em) {
  .tabbed-search-content .button.search-button {
    margin-top: 0px;
  }
}

.tabbed-search-content .button.search-button i {
  height: 15px;
  width: 15px;
  margin-right: 5px;
  margin-top: -2px;
}

.tabs-title > a {
  background: $rotograbadoLight; 
  font-family: $cm-font-title ;
  color: #fff;
  font-weight: bold;
  margin: 0 1px;
  font-size: .95rem ;
}

.tabs-panel {
  padding: 0;}
 

.tabs-title > a:focus, .tabs-title > a[aria-selected='true'] {
  color: #fff;
  background: $rotograbado; 

}

.tabs-title > a:hover {
  color: #fff;
  background: $rotograbadoDark; 

}

.signup-callout {
  padding-top: 100px;
  padding-bottom: 100px;
  background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.4)), url("https://unsplash.it/2000/1200?image=667");
  background-position: center center;
}

.signup-callout h2 {
  color: #fff;
}

.signup-callout p {
  color: #fff;
}

.tabs-title > a {
  padding: 1em 1.25em;
}

