.container-main    
    padding-top: 6rem 
    
    @media(max-width 1024px)
            padding-top: 4.75rem
    .cell
	    background $cm-white-color !important
   
    .grid-x
        .cell:nth-child(1) 
            padding 0 0 .5rem

            @media (min-width 640px)
                padding: 0 .5rem .5rem 0

        .cell:nth-child(2) 
            padding 0 .25rem .25rem 0 
            
            .card-sm 
                min-height 21rem
            
            @media (min-width 640px)
                padding: 0 0 .5rem .5rem

        .cell:nth-child(3) 
            padding 0 0 .25rem .25rem 

            @media (min-width 640px) 
                padding .5rem 0 
            
            @media (min-width 992px) 
                padding .5rem .5rem .5rem 0

        .cell:nth-child(4) 
            padding .25rem .25rem .25rem 0 

            @media (min-width 640px)
                padding: .5rem .5rem .5rem 0 
    
            @media (min-width 992px) 
                padding .5rem 

        .cell:nth-child(5) 
            padding .25rem 0 .25rem .25rem 
            
            @media (min-width 640px) 
                padding: .5rem 0 .5rem .5rem 

            @media (min-width 992px) 
                padding .5rem 0 .5rem .5rem

        .cell:nth-child(6) 
            padding .25rem 0 .25rem 

            @media (min-width 640px) 
                padding: .5rem .5rem .5rem 0

        .cell:nth-child(7) 
            padding .25rem 0 .25rem 

            @media (min-width 640px) 
                padding: .5rem 0 .5rem .5rem

        .cell:nth-child(8) 
             padding .25rem .25rem .25rem 0 

             @media (min-width 640px) 
                padding: .5rem 0 
                
             @media (min-width 992px) 
                padding .5rem .5rem 1rem 0

        .cell:nth-child(9) 
            padding .25rem 0 .25rem .25rem 

            @media (min-width 640px) 
                padding: .5rem .5rem .5rem 0 
            
            @media (min-width 992px) 
                padding .5rem .5rem 1rem

        .cell:nth-child(10) 
             padding .25rem 0 .25rem 

             @media (min-width 640px) 
                padding: .5rem 0 1rem .5rem 

.gradient-img
    position absolute
    top 0
    right 0
    height 100%    
    width 100%
    background -moz-linear-gradient(left, rgba(2,5,26,0.67) 0%, rgba(0,0,0,0) 100%)
    background -webkit-gradient(left top, right top, color-stop(0%, rgba(2,5,26,0.67)), color-stop(100%, rgba(0,0,0,0)))
    background -webkit-linear-gradient(left, rgba(2,5,26,0.67) 0%, rgba(0,0,0,0) 100%)
    background -o-linear-gradient(left, rgba(2,5,26,0.67) 0%, rgba(0,0,0,0) 100%)
    background -ms-linear-gradient(left, rgba(2,5,26,0.67) 0%, rgba(0,0,0,0) 100%)
    background linear-gradient(to right, rgba(2,5,26,0.67) 0%, rgba(0,0,0,0) 100%)