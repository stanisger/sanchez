.container-in
    padding-top 5.5rem

.accordion-content
  padding 4rem 2rem

.accordion-title
    cursor default
    color $cm-font-color
    padding 0
    border 0

    &:before
      display none
    img
        width 1.1rem
        margin-right .5rem
 

    &:hover
    &:focus
        background transparent
        color $cm-font-color
.medals 
    text-align center
    padding-top  2rem

    img
        width  4rem
        margin auto
        display block 

    strong  
       display block 
       margin .5rem 0 .5rem

    small 
       display block 
       text-transform  uppercase
       margin 1rem 0 0
    
.card-color
  -moz-border-radius 1rem
  -moz-border-radius-topleft 0
  -webkit-border-radius 1rem
  -webkit-border-top-left-radius 0
  background $cm-white-color
  border-radius 1rem
  border-top-left-radius 0
  color $cm-font-color
  display flex
  flex-direction column
  overflow hidden
  padding 3rem 2rem 1rem
  position relative

  .-primary-color-outline
    background transparent
    border .05rem solid $bandaAngosta
    color $bandaAngosta
    font-size .8rem
    margin-top 1rem
    width 100%
    
  .-icon-shopping
    cursor pointer
    height 1.5rem 
    position absolute
    right 1rem
    top 1rem
    width 1.5rem
    

  span
    border-radius 50%
    height 7rem
    left -4rem
    position absolute
    top -4rem
    width 7rem

.fixed_aside
  -webkit-box-shadow: 0px 1px 6px -1px rgba(0,0,0,0.4); 
  box-shadow: 0px 1px 6px -1px rgba(0,0,0,0.4);
  background white  !important
  left 0
  position fixed !important
  top 5rem  !important
  width 100% 
  z-index 999 



    
