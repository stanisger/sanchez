.marketing-site-footer-content {
  max-width 74rem
  margin 0 auto 2rem

  @media (max-width: 640px ) {
    text-align: center;
    .material-icons {
      display: none}
    }
}


.marketing-site-footer {
  background: $cm-primary-color;
  color: $cm-white-color ;
  padding: 2rem 0 0;
  margin-top: 1rem;

  h4 {
    margin: 0;
    font-family: $cm-font-body;
  }
  
  p {
    margin-left: 0;
    line-height: 1.125rem;
    font-size: .9rem;
    width: 100%;
    }
    
    img.ink {
      max-width: 12rem;
      width: 12rem;
    }
}

.marketing-site-footer .marketing-site-footer-menu-social a {
  color:$cm-font-color ;
}

.marketing-site-footer .column-block {
  margin-bottom: 30px;
}

.marketing-site-footer > .row {
  margin-bottom: 1rem;
}

@media screen and (max-width: 39.9375em) {
  .marketing-site-footer .columns {
    margin-bottom: 2rem;
  }
}

.marketing-site-footer-name {
  color:$cm-font-color ;
  margin-bottom: 1rem;
  font-size: 2rem;
}

.marketing-site-footer-title {
  color:$cm-white-color;
  margin-bottom: 1rem;
  font-size: 1.25rem;
}

.marketing-site-footer-block {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.marketing-site-footer-block .fa {
  font-size: 2rem;
  color: #020304;
}

.marketing-site-footer-block p {
  margin-left: .5;
  line-height: 1.125rem;
  font-size: .9rem;
}
.marketing-site-footer-block i {
  margin:  0 .5rem ;

}

.marketing-site-footer-bottom {
  background: $cm-black-color ;
  padding: 1rem 0;
}

.marketing-site-footer-bottom p,
.marketing-site-footer-bottom .menu {
  margin-bottom: 0;
}

.marketing-site-footer-bottom .marketing-site-footer-bottom-links {
  -webkit-justify-content: flex-end;
      -ms-flex-pack: end;
          justify-content: flex-end;
}

.marketing-site-footer-bottom .marketing-site-footer-bottom-links a {
  color:$cm-font-color ;
}

@media screen and (max-width: 63.9375em) {
  .marketing-site-footer-bottom .marketing-site-footer-bottom-links {
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
  }
}

@media screen and (max-width: 63.9375em) {
  .marketing-site-footer-bottom {
    text-align: center;
  }
}

.networks img{
    padding: .4rem }

.item-logotipo-footer {
    width: 12rem;
    margin-bottom: 1rem;
    @media (max-width :640px) {
      margin-top: 1rem;

      }
  }